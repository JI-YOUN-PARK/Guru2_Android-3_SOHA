<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Openning">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WriteActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".PlanerActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".HabitActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".DiaryActivity" android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".note.EditNote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MemoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".note.addNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".note.Note_detail"
            android:label="@string/title_activity_note_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity"/>


    </application>

</manifest>